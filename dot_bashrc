#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

PS1='[\u@\h \W]\$ '

alias gl='git log --oneline --all --graph --decorate'
alias gs='git status'
alias vi='nvim'
alias vim='nvim'
alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias get_opam='eval $(opam env)'
alias gln='git log --oneline --graph --decorate'
alias dkl='docker logs `docker ps -q --filter name=$1'
alias azlogin='az login --tenant vortalcloud.onmicrosoft.com'
alias acrlogin='az acr login --name vortal'

export EDITOR='nvim'
export ZK_NOTEBOOK_DIR='/home/andre/notes'
#export BROWSER=/mnt/c/Program\ Files/Google/Chrome/Application/chrome.exe
#export COMPOSE_PARALLEL_LIMIT=1


export GPG_TTY="$(tty)" 
export SSH_AUTH_SOCK="/run/user/$UID/gnupg/S.gpg-agent.ssh"
export GPG_TTY=$(tty)
gpg-connect-agent updatestartuptty /bye > /dev/null

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi

if [ -d "$HOME/.npm-packages/bin" ] ; then
    PATH="$HOME/.npm-packages/bin:$PATH"
fi


